issn = {03010511},
journal = {Biological Psychology},
keywords = {EEG,Elite athletes,Flow-experience,Functional brain asymmetry,Psycho-motor performance,Table tennis,Theta coherence},
mendeley-groups = {Flow High Performance Cognition/AKA-HPC},
month = {feb},
